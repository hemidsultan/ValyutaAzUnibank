            app:layout_constraintTop_toBottomOf="@+id/view" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" app:layout_constraintStart_toEndOf="@+id/textViewValyuta2"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="1.0"/>
    <TextView
            android:text="EUR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewValyuta2" android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@+id/imageViewValyuta2"
            android:layout_marginStart="12dp"
