            app:layout_constraintBottom_toBottomOf="@+id/imageView11"
            app:layout_constraintStart_toEndOf="@+id/imageView11" android:layout_marginStart="12dp"
            app:layout_constraintVertical_bias="1.0"/>
    <TextView
            android:text="0.00"
            android:paddingTop="6dp"
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:id="@+id/textViewConvertGBP" android:textAlignment="textEnd"
            android:textSize="18sp" app:layout_constraintTop_toBottomOf="@+id/view5" android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toEndOf="@+id/textView12"
            app:layout_constraintHorizontal_bias="1.0"/>
