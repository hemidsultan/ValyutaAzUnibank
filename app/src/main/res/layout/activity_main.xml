            android:text="0.00"
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:id="@+id/textViewConvertCHF"
            app:layout_constraintTop_toBottomOf="@+id/view6" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" app:layout_constraintStart_toEndOf="@+id/textView14"
            app:layout_constraintHorizontal_bias="1.0" android:textAlignment="textEnd" android:textSize="18sp"/>


