            android:layout_width="160dp"
            android:layout_height="40dp"
            android:id="@+id/textViewConvertAZN"
            app:layout_constraintTop_toBottomOf="@+id/view3" app:layout_constraintStart_toEndOf="@+id/textView8"
            app:layout_constraintEnd_toEndOf="parent"
