            android:text="RUB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView10" android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView10"
            app:layout_constraintTop_toTopOf="@+id/imageView10" app:layout_constraintStart_toEndOf="@+id/imageView10"
            android:layout_marginStart="12dp" app:layout_constraintVertical_bias="1.0"/>
    <TextView
            android:paddingTop="6dp"
            android:text="0.00"
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:id="@+id/textViewConvertRUB" android:textAlignment="textEnd"
            android:textSize="18sp" app:layout_constraintStart_toEndOf="@+id/textView10"
            android:layout_marginEnd="16dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0" app:layout_constraintTop_toBottomOf="@+id/view4"/>
    <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp" app:srcCompat="@drawable/unitedkingdom"
            android:id="@+id/imageView11" android:layout_marginTop="8dp"
