            app:layout_constraintTop_toTopOf="@+id/imageViewValyuta2" app:layout_constraintVertical_bias="0.0"/>
    <View android:layout_width="match_parent" android:layout_height="2dp"
          android:background="@android:color/darker_gray"
          android:id="@+id/view3"
          app:layout_constraintTop_toBottomOf="@+id/textViewConvertEUR" android:layout_marginTop="4dp"
