            android:layout_width="25dp"
            android:layout_height="25dp" app:srcCompat="@drawable/switzerland"
            android:id="@+id/imageView12" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/view6" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"/>
    <TextView
            android:text="CHF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView14" android:textSize="18sp"
